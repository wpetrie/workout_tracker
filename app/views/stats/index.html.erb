<p id="notice"><%= notice %></p>

<section>
<div class='container'>
<h1>Weight</h1>
<div=class="card">
  <div class="card-body">
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Weight</th>
          <th>Comments</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    <tbody>
        <% @stats.each do |stat| %>
         <tr>
           <td><%= stat.date %></td>
           <td><%= stat.weight %></td>
           <td><%= stat.comments %></td>
           <td><%= link_to 'View', stat %></td>
           <td><%= link_to 'Edit', edit_stat_path(stat) %></td>
            <td><%= link_to 'Delete', stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
      <%= link_to 'Add New', new_stat_path, :class => "btn btn-primary" %>
      </table>
    </div>
    <%= will_paginate @stats %>
    <%= line_chart @stats.group(:date).sum(:weight) %>
    