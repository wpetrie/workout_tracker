<p id="notice"><%= notice %></p>

<h1>Stats</h1>


<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Weight</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stats.each do |stat| %>
      <tr>
        <td><%= stat.date %></td>
        <td><%= stat.weight %></td>
        <td><%= stat.comments %></td>
        <td><%= link_to 'View', stat %></td>
        <td><%= link_to 'Edit', edit_stat_path(stat) %></td>
        <td><%= link_to 'Delete', stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stat', new_stat_path %>
</div>
<hr>

<%= line_chart @stats.group(:date).sum(:weight) %>